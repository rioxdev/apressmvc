@{
    ViewData["Title"] = "Bookin completed";
}

@model Appointment

<div class="bg-success m-1 p-1">
    <h2>Your Appointment</h2>
</div>

<table class="table table-bordered">
    <tr>
        <th>Your name is: </th>
        <td>@Model.ClientName</td>
    </tr>
    <tr>
        <th>Your appointment date is: </th>
        <td>@Model.Date.ToString("d")</td>
    </tr>
</table>
<a class="btn btn-info" asp-action="Index">Make another Appointment</a>