@{
    ViewData["Title"] = "Create city";
}

@model City

<form asp-action="Create" asp-controller="City" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Country">Country</label>
        <input asp-for="Country" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Population">Population</label>
        <input asp-for="Population" class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn">Save</button>
        <a asp-action="Index" asp-controller="Home" class="btn">Cancel</a>
    </div>
</form>
